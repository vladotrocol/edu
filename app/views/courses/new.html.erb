 <div class="well col-md-10 col-md-offset-1">
 <%= form_for(:courses, :url => {:action => 'create'}) do |f| %>
    <%= f.text_field(:title, class: 'form-control')%>
    <%= f.text_area(:description, rows: 5, class: 'form-control')%>
    <%= f.text_area(:content, rows: 15, class: "markdown-editor")%>
    <%= f.button "Submit", type: 'submit', class: 'btn col-md-4 col-md-offset-4 btn-large btn-success', id: 'medit' %>
<% end %>
</div>

<%= render 'layouts/fix_markdown' %>