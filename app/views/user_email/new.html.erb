<h1>From <%= current_user.email%></h1>
<h1>To <%= @recipient.email %></h1>

 <div class="well col-md-10 col-md-offset-1">
 <%= form_for(:user_email, :url => {:action => 'send_email', :id => @recipient}) do |f| %>
    <%= f.text_field(:subject, class: 'form-control')%>
    <%= f.text_area(:body, rows: 15, class: "markdown-editor")%>
    <%= f.button "Submit", type: 'submit', class: 'btn col-md-4 col-md-offset-4 btn-large btn-success' %>
<% end %>
</div>

<%= render 'layouts/fix_markdown' %>